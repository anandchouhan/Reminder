<div class="main-wrapper">
  <div class="app" id="app">
    <div class="sidebar-overlay" id="sidebar-overlay"></div>
    <article class="content grid-page">
      <div class="title-block">
        <h4 class="title"> Add Employee Information </h4>
      </div>
      <section class="section">
        <div class="row sameheight-container">
          <div class="col-md-12">
            <div class="container">
             <%= form_for (@employee), url: admin_employees_path, :html => { :multipart => true } do |f| %>
              <form class="well form-horizontal" action=" " method="post"  id="contact_form">
                <fieldset>
                  <% if @employee.errors.any? %>
                    <div id="error_explanation">
                      <h2>
                        <%#= pluralize(@user.errors.count, "error") %><!--  prohibited
                        this article from being saved: -->
                      </h2>
                      <ul>
                        <% @employee.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %> 
                  <div class="form-group clearfix">
                    <div class="col-sm-6">
                      <label class="col-md-12 control-label pull-left">Employee Name</label>  
                      <div class="col-md-12">
                      <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user" aria-hidden="true"></i></span>
                        <%= f.text_field :name,  :class=> "form-control", :placeholder=> "Employee Name" %>
                      </div>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <label class="col-md-12 control-label pull-left">E-Mail</label>  
                      <div class="col-md-12">
                        <div class="input-group">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-envelope" aria-hidden="true"></i></span>
                          <%= f.text_field :email,  :class=> "form-control",  :placeholder=> "E-Mail Address" %>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="form-group clearfix">
                    <div class="col-sm-6">
                      <label class="col-md-12 control-label pull-left">Mobile</label>  
                      <div class="col-md-12">
                        <div class="input-group">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-phone" aria-hidden="true"></i></span>
                          <%= f.text_field :contact_no,  :class=> "form-control",  :placeholder=> "(845)555-1212"  %>
                        </div>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <label class="col-md-12 control-label pull-left">Date of Birth</label>  
                      <div class="col-md-12">
                        <div class="input-group">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-calendar" aria-hidden="true"></i></span>
                          <%= f.text_field :date_of_birth,  placeholder: "date of birth(DD/MM/YYYY)", :class=> "form-control date"  %>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="form-group clearfix">
                    <div class="col-sm-6">
                      <label class="col-md-12 control-label pull-left">Uploade Image</label>  
                      <div class="col-md-12">
                        <div class="input-group">
                          <span class="fileinput-button"></span>
                          <%= f.file_field :avatar %>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="form-group clearfix">
                    <div class="col-sm-12">
                      <label class="col-md-12 control-label pull-left"></label>
                      <div class="col-md-4">
                        <%= f.submit "Submit", class: "btn btn-info" %>
                        <%= link_to "Cancel",  root_path, class: "btn btn-danger"  %>
                      </div>
                      <div class="col-md-4">
                      </div>
                    </div>
                  </div>
                </fieldset>
              </form>
              <% end %>
            </div>
          </div>
        </div>  
      </section>
    </article>
  </div>
</div>

<script src="/assets/app.js"></script>
<script src="/assets/vendor.js"></script>
<script src="/assets/bootstrap-datetimepicker.js"></script>